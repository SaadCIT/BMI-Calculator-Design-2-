<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#6A0528">


    <ImageView
        android:id="@+id/iv"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:src="@drawable/bmi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/hightet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit"
        android:hint="Enter Your hight   (CM)"
        android:inputType="numberDecimal"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:padding="13dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="15dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/weightet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edit"
        android:hint="Enter Your weight   (KG)"
        android:inputType="numberDecimal"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:padding="13dp"
        android:layout_marginHorizontal="10dp"
        android:textSize="15dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hightet"
        android:layout_marginTop="20dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chack BMI"
        android:textSize="15dp"
        android:textStyle="bold"
        android:padding="15dp"
       android:textColor="@color/white"
        android:background="@drawable/buton_design"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/weightet"
        android:layout_marginTop="30dp" />



    <TextView
        android:id="@+id/BMItv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv"
        android:text=" Your BMI  : "
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp"
        android:padding="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button" />


    <TextView
        android:id="@+id/resulttv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tv"
        android:text=" Your BMI is  : "
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:padding="11dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BMItv" />

</androidx.constraintlayout.widget.ConstraintLayout>